@*@model IEnumerable<BookType>;*@
@model BooksInventory.ViewModels.BooksViewModel;
@{
    ViewData["Title"] = "Index";
}

<h1>@Model.BookName</h1>

<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">Book Catelogue</h2>
        </div>

        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Books" asp-action="CreateBook">
                <i class="bi bi-file-earmark-plus-fill"></i> Create New Book
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Row ID</th>
            <th>Book Title</th>
            <th>Author</th>
            <th>Cover Type</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        
        @foreach(var obj in Model.BookDetails)
        {
            <tr>
            <td>
                @obj.Id
            </td>
            <td>
                @obj.Title
            </td>
            <td>
                @obj.Author
            </td>
            <td>
                @obj.covertype
            </td>
            <td>
                <a class="btn btn-success"  asp-action="CreateBook" asp-route-id="@obj.Id">
                    <i class="bi bi-pen-fill"></i> Update
                </a>

                <a class="btn btn-danger" asp-controller="Books" asp-action="DeleteBook" asp-route-id="@obj.Id">
                    <i class="bi bi-trash3-fill"></i> Remove
                </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<br /><hr />

@*Loaded via javascript*@
<table id="load_DT_data" class="table table-bordered table-dark table-hover" style="width:100%">
    <thead>
        <tr>
            <th>Book Title</th>
            <th>Author</th>
            <th>ISBN</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>

</table>

@section Scripts{
    <script src="~/js/book.js"></script>
}